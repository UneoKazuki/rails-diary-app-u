  <%# 一覧　トップ画面 %>
<h1>Ideas</h1>

<div id="ideas">
  <% @ideas.in_groups_of(3, false) do |idea_group| %>
    <div class="row">
      <% idea_group.each do |idea| %>
        <div class="col-md-4 my-3">
          <%= link_to idea, class: "link-to-u" do %>
            <h2 class="ctt-title-u"><%= idea.title %></h2>
            <%= image_tag(idea.picture_url(:thumb), width: '60%') if idea.picture.present? %>
          <% end %>
        </div>
      <% end %>
    </div>      
  <% end %>
</div>


